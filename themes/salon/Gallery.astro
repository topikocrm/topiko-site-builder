---
export interface Props {
  siteConfig: any;
  section?: any;
}

const { siteConfig, section } = Astro.props;
const sectionProps = section?.props || {};
const title = sectionProps.title || "Our Gallery";
const subtitle = sectionProps.subtitle || "Take a look at our beautiful salon and satisfied clients";
---

<section class="py-16 px-4 bg-white">
  <div class="max-w-6xl mx-auto">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h2 class="text-4xl font-bold text-[var(--text)] mb-4">{title}</h2>
      <p class="text-lg text-gray-700 max-w-2xl mx-auto">
        {subtitle}
      </p>
    </div>

    <!-- Gallery Grid -->
    <div class="grid md:grid-cols-3 gap-6">
      {[1, 2, 3, 4, 5, 6].map(item => (
        <div class="aspect-square bg-gradient-to-br from-[color-mix(in_srgb,_var(--background)_95%,_var(--accent)_5%)] to-[color-mix(in_srgb,_var(--background)_85%,_var(--accent)_15%)] rounded-xl flex items-center justify-center shadow-md hover:shadow-lg transition duration-300">
          <div class="text-center">
            <div class="w-12 h-12 bg-[var(--accent)] rounded-full mx-auto mb-3 flex items-center justify-center">
              <span class="text-white text-xl">ðŸ“¸</span>
            </div>
            <p class="text-[var(--secondary)] font-medium text-sm">Gallery Image {item}</p>
          </div>
        </div>
      ))}
    </div>

    <!-- Call to Action -->
    <div class="text-center mt-12">
      <p class="text-gray-700 mb-6">Love what you see? Book your appointment today!</p>
      <button class="bg-[var(--primary)] hover:bg-[var(--secondary)] text-white px-8 py-3 rounded-lg font-semibold transition duration-300">
        View More Photos
      </button>
    </div>
  </div>
</section>