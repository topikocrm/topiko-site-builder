---
export interface Props {
  siteConfig: {
    businessName: string;
  };
  section?: any;
}

const { siteConfig, section } = Astro.props;
---

<section class="py-16 px-4 bg-white">
  <div class="max-w-6xl mx-auto">
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <!-- Content -->
      <div>
        <h2 class="text-4xl font-bold text-[var(--text)] mb-6">
          About {siteConfig.businessName}
        </h2>
        <p class="text-lg text-gray-700 mb-6 leading-relaxed">
          Welcome to our luxury salon & spa, where beauty meets relaxation. 
          With over 10 years of experience, our team of professional stylists 
          and beauticians are dedicated to helping you look and feel your absolute best.
        </p>
        <p class="text-lg text-gray-700 mb-8 leading-relaxed">
          We use only the finest products and latest techniques to deliver 
          exceptional results in a warm, welcoming environment. From cutting-edge 
          hair treatments to rejuvenating spa services, we're here to pamper you.
        </p>
        
        <!-- Features -->
        <div class="grid grid-cols-2 gap-4">
          <div class="flex items-center">
            <div class="w-3 h-3 bg-[var(--accent)] rounded-full mr-3"></div>
            <span class="text-gray-700">Expert Stylists</span>
          </div>
          <div class="flex items-center">
            <div class="w-3 h-3 bg-[var(--accent)] rounded-full mr-3"></div>
            <span class="text-gray-700">Premium Products</span>
          </div>
          <div class="flex items-center">
            <div class="w-3 h-3 bg-[var(--accent)] rounded-full mr-3"></div>
            <span class="text-gray-700">Relaxing Atmosphere</span>
          </div>
          <div class="flex items-center">
            <div class="w-3 h-3 bg-[var(--accent)] rounded-full mr-3"></div>
            <span class="text-gray-700">Latest Techniques</span>
          </div>
        </div>
      </div>
      
      <!-- Image Placeholder -->
      <div class="relative">
        <div class="aspect-square bg-gradient-to-br from-[color-mix(in_srgb,_var(--background)_95%,_var(--accent)_5%)] to-[color-mix(in_srgb,_var(--background)_85%,_var(--accent)_15%)] rounded-2xl flex items-center justify-center shadow-lg">
          <div class="text-center">
            <div class="w-16 h-16 bg-[var(--accent)] rounded-full mx-auto mb-4 flex items-center justify-center">
              <span class="text-white text-2xl">üíá‚Äç‚ôÄÔ∏è</span>
            </div>
            <p class="text-[var(--secondary)] font-medium">Beautiful Salon Interior</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>