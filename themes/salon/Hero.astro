---
export interface Props {
  siteConfig: {
    businessName: string;
    logoUrl: string;
    colorPreset: string;
  };
  section?: any;
}

const { siteConfig, section } = Astro.props;
---

<section class="relative bg-gradient-to-br from-[var(--background)] to-[color-mix(in_srgb,_var(--background)_90%,_var(--accent)_10%)] py-20 px-4">
  <div class="max-w-4xl mx-auto text-center">
    <!-- Logo -->
    {siteConfig.logoUrl && (
      <div class="mb-8">
        <img 
          src={siteConfig.logoUrl} 
          alt={`${siteConfig.businessName} Logo`}
          class="w-20 h-20 mx-auto rounded-full shadow-lg"
        />
      </div>
    )}
    
    <!-- Main Title -->
    <h1 class="text-5xl md:text-6xl font-bold text-[var(--text)] mb-6">
      {siteConfig.businessName}
    </h1>
    
    <!-- Subtitle -->
    <p class="text-xl md:text-2xl text-[color-mix(in_srgb,_var(--text)_80%,_var(--secondary)_20%)] mb-8 max-w-2xl mx-auto">
      Experience luxury and relaxation at our premier salon & spa
    </p>
    
    <!-- CTA Button -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <button class="bg-[var(--primary)] hover:bg-[var(--secondary)] text-white px-8 py-4 rounded-lg text-lg font-semibold transition duration-300 shadow-lg">
        Book Appointment
      </button>
      <button class="border-2 border-[var(--primary)] text-[var(--primary)] hover:bg-[var(--primary)] hover:text-white px-8 py-4 rounded-lg text-lg font-semibold transition duration-300">
        View Services
      </button>
    </div>
  </div>
</section>