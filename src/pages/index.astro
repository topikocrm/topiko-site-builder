---
import fs from 'fs';
import path from 'path';

// Load siteConfig from JSON file
const siteConfigPath = path.join(process.cwd(), 'data/sites/sample/siteConfig.json');
const siteConfigContent = fs.readFileSync(siteConfigPath, 'utf-8');
const siteConfig = JSON.parse(siteConfigContent);

// Dynamically import the theme layout
const Layout = await import(`../../themes/${siteConfig.themeId}/layout.astro`);
---

<Layout.default siteConfig={siteConfig} />
